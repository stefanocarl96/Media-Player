<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_adapter__cl__root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_adapter__img__song_picture"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/bigger_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars[3]"
        android:contentDescription="@string/song_image" />

    <TextView
        android:id="@+id/custom_adapter__tv__song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:fontFamily="cursive"
        android:text="@string/song_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titles"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/custom_adapter__img__song_picture"
        app:layout_constraintStart_toStartOf="@+id/custom_adapter__img__song_picture"
        app:layout_constraintTop_toBottomOf="@+id/custom_adapter__img__song_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>